<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@drawable/gradient_bg">
    </LinearLayout>

    <ImageView
        android:id="@+id/ivInfoWindowMain"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_weight="6.29"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtInfoWindowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivInfoWindowMain"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#224477"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInfoWindowEventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtInfoWindowTitle"
        android:layout_below="@+id/txtInfoWindowTitle"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="14dp"
        android:textStyle="bold" />
    
</RelativeLayout>